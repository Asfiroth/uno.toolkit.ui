<Page
    x:Class="Uno.Toolkit.Samples.Content.Controls.NavigationBarSamplePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Uno.Toolkit.Samples.Views.SamplePages"
	xmlns:sample="using:Uno.Toolkit.Samples"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

<Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
		<sample:SamplePageLayout x:Name="SamplePageLayout">
			<sample:SamplePageLayout.MaterialTemplate>
				<DataTemplate>

					<Button Content="Show Sample"
							Click="LaunchFullScreenSample" />

				</DataTemplate>
			</sample:SamplePageLayout.MaterialTemplate>
		</sample:SamplePageLayout>
	</Grid>
</Page>
