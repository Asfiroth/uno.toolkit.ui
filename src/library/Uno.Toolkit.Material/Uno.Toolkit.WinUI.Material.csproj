<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="MSBuild.Sdk.Extras/3.0.38">
	<!--
	Adding project references to this project requires some manual adjustments.
	Please see https://github.com/unoplatform/uno/issues/3909 for more details.
	-->
	<PropertyGroup>
    	<TargetFrameworks>netstandard2.0;xamarinios10;xamarinmac20;MonoAndroid11.0;monoandroid10.0</TargetFrameworks>
		<TargetFrameworks Condition=" '$(OS)' == 'Windows_NT' ">$(TargetFrameworks);net5.0-windows10.0.18362.0</TargetFrameworks>
		<!-- Ensures the .xr.xml files are generated in a proper layout folder -->
    	<GenerateLibraryLayout>true</GenerateLibraryLayout>
		<DefineConstants>$(DefineConstants);IS_WINUI</DefineConstants>
		<AssemblyName>Uno.Toolkit.WinUI.Material</AssemblyName>
		<RootNamespace>Uno.Toolkit.UI.Material</RootNamespace>
		<PackageId>Uno.Toolkit.WinUI.Material</PackageId>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Uno.Material.WinUI" Version="1.1.0-dev.15" />
		<PackageReference Include="Uno.Cupertino.WinUI" Version="1.1.0-dev.15" />
		<PackageReference Include="Uno.WinUI" Version="4.0.0-dev.5612" />
		<FrameworkReference Update="Microsoft.Windows.SDK.NET.Ref" RuntimeFrameworkVersion="10.0.18362.16" Condition="'$(TargetFramework)'=='net5.0-windows10.0.18362'" />
		<FrameworkReference Update="Microsoft.Windows.SDK.NET.Ref" TargetingPackVersion="10.0.18362.16" Condition="'$(TargetFramework)'=='net5.0-windows10.0.18362'" />
	</ItemGroup>

	<Choose>
		<When Condition="'$(TargetFramework)'=='net5.0-windows10.0.18362.0'">
			
			<ItemGroup>
				<PackageReference Include="Microsoft.ProjectReunion.WinUI" Version="0.5.6" />
			</ItemGroup>
			
		</When>
		<Otherwise>
			
			<ItemGroup>
				<Page Include="**\*.xaml" Exclude="bin\**\*.xaml;obj\**\*.xaml" />
				<Compile Update="**\*.xaml.cs">
					<DependentUpon>%(Filename)</DependentUpon>
				</Compile>
			</ItemGroup>
			
		</Otherwise>
	</Choose>
  <ItemGroup>
    <UpToDateCheckInput Include="**\*.xaml" Exclude="bin\**\*.xaml;obj\**\*.xaml" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\..\Uno.Toolkit.UI\Uno.Toolkit.WinUI.csproj" />
  </ItemGroup>

	<!-- Workaround to avoid including Uno.Toolkit.UI XBFs in the PRI file -->
	<Target Name="AdjustGetPackagingOutputs" BeforeTargets="GetPackagingOutputs">
		<Message Importance="high" Text="Applying NuGet packaging workaround for dependent PRI files exclusion" />
		<ItemGroup>
			<_UnoToolkitUIFiles Include="@(ProjectReferenceWithConfiguration)" Condition="'%(ProjectReferenceWithConfiguration.Name)'=='Uno.Toolkit.WinUI'" />
			<ProjectReferenceWithConfiguration Remove="@(_UnoToolkitUIFiles)" />
		</ItemGroup>
	</Target>

</Project>