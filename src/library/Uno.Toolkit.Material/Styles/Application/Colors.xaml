<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
					xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					x:Class="Uno.Toolkit.Material.MaterialToolkitColors">
	<!--

	For more information on the color system, consult this page
	https://material.io/design/color/the-color-system.html#color-theme-creation

	-->
	<ResourceDictionary.MergedDictionaries>
		<MaterialColors xmlns="using:Uno.Material" />
		<ResourceDictionary>
			<!-- Global brushes -->
			<ResourceDictionary.ThemeDictionaries>

				<!-- Light Theme -->
				<ResourceDictionary x:Key="Light">
					<!-- Tab Bar -->
					<SolidColorBrush x:Key="MaterialTabBarItemUnselectedForegroundBrush"
									 Color="{ThemeResource MaterialOnPrimaryColor}"
									 Opacity="0.70" />
				</ResourceDictionary>

				<!-- Dark Theme -->
				<ResourceDictionary x:Key="Dark">
					<!-- Tab Bar -->
					<SolidColorBrush x:Key="MaterialTabBarItemUnselectedForegroundBrush"
									 Color="{ThemeResource MaterialOnPrimaryColor}"
									 Opacity="0.70" />
				</ResourceDictionary>

			</ResourceDictionary.ThemeDictionaries>
		</ResourceDictionary>
	</ResourceDictionary.MergedDictionaries>
</ResourceDictionary>
