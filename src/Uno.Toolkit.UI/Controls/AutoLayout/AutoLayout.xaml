<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:layout="using:Uno.Toolkit.UI.Controls">

	<Style TargetType="layout:AutoLayout" x:Key="DefaultAutoLayoutStyle">
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="layout:AutoLayout">
					<Border Background="{TemplateBinding Background}"
							Padding="{TemplateBinding Padding}"
							BorderThickness="{TemplateBinding BorderThickness}"
							BorderBrush="{TemplateBinding BorderBrush}"
							CornerRadius="{TemplateBinding CornerRadius}">
						<Grid x:Name="PART_RootGrid"/>
					</Border>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

	<Style TargetType="layout:AutoLayout" BasedOn="{StaticResource DefaultAutoLayoutStyle}" />

</ResourceDictionary>
