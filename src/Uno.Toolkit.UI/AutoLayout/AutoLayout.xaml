<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:layout="using:Uno.UI.ToolkitLib">

	<Style TargetType="layout:AutoLayout" x:Key="DefaultAutoLayoutStyle">
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="layout:AutoLayout">
					<Grid x:Name="PART_RootGrid"
						  Padding="{TemplateBinding Padding}"
						  Background="{TemplateBinding Background}"
						  BorderThickness="{TemplateBinding BorderThickness}"
						  BorderBrush="{TemplateBinding BorderBrush}"
						  CornerRadius="{TemplateBinding CornerRadius}"/>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

	<Style TargetType="layout:AutoLayout" BasedOn="{StaticResource DefaultAutoLayoutStyle}" />

</ResourceDictionary>
